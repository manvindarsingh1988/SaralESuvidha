@{
    Layout = "_LayoutBillPay";
}

<section class="container">
    <div class="bg-white shadow-md rounded p-4">
        <div class="row g-4">

            <!-- DTH Recharge
            ============================================= -->
            <div class="col-lg-4 col-xxl-5">
                <h2 class="text-4 mb-3">DTH Recharge</h2>
                <form id="dthRechargeBill" method="post">
                    <div class="mb-3">
                        <select class="form-select" id="operator" required="">
                            <option value="">Select Your Operator</option>
                            <option>Tata Sky</option>
                            <option>Videocon D2H</option>
                            <option>DEN Networks Ltd</option>
                            <option>DishTV India Ltd</option>
                            <option>GTPL Hathway Ltd</option>
                            <option>Sun Direct TV Pvt Ltd.</option>
                            <option>Asianet Satellite Communications Ltd</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" data-bv-field="number" id="cardNumber" required placeholder="Enter Your Card Number">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">&#8377;</span> <a href="#" data-bs-target="#view-plans" data-bs-toggle="modal" class="view-plans-link d-none">View Plans</a>
                        <input class="form-control" id="amount" placeholder="Enter Amount" required type="text">
                    </div>
                    <div class="d-grid"><a class="btn btn-primary" href="">Continue to Recharge</a></div>
                </form>
            </div>
            <!-- DTH Recharge end -->
            <!-- Slideshow
            ============================================= -->
            <div class="col-lg-8 col-xxl-7">
                <div class="owl-carousel owl-theme single-slider" data-animateout="fadeOut" data-animatein="fadeIn" data-autoplay="true" data-loop="true" data-autoheight="true" data-nav="true" data-items="1">
                    <div class="item"><a href="#"><img class="img-fluid" src="~/images/slider/banner-3.jpg" alt="banner 3" /></a></div>
                    <div class="item"><a href="#"><img class="img-fluid" src="~/images/slider/banner-4.jpg" alt="banner 4" /></a></div>
                    <div class="item"><a href="#"><img class="img-fluid" src="~/images/slider/banner-5.jpg" alt="banner 5" /></a></div>
                </div>
            </div>
            <!-- Slideshow end -->

        </div>
    </div>
</section>

<script type="text/javascript">
$('#dthrecharge').addClass('active');
</script>