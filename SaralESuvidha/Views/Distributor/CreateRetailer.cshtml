@model SaralESuvidha.ViewModel.RetailUserViewModel;
@{
    Layout = "_LayoutDistributor";
    ViewData["title"] = "Create Retailer";
}


<div class="container">
    <h3 class="text-center">Add Retailer Details</h3>
    <form class="form-horizontal" id="frmMain" name="frmMain" asp-action="SaveRetailer" asp-controller="Distributor" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label class="form-label" for="firstName">First Name</label> <span asp-validation-for="FirstName" class="text-danger"></span>
                <input asp-for="FirstName" type="text" class="form-control form-control-sm" id="firstName" placeholder="First Name">
            </div>

            <div class="form-group col-md-4">
                <label class="form-label" for="middleName">Middle Name</label> <span asp-validation-for="MiddleName" class="text-danger"></span>
                <input asp-for="MiddleName" type="text" class="form-control form-control-sm" id="middleName" placeholder="Middle Name">
            </div>

            <div class="form-group col-md-4">
                <label class="form-label" for="lastName">Last Name</label> <span asp-validation-for="LastName" class="text-danger"></span>
                <input asp-for="LastName" type="text" class="form-control form-control-sm" id="lastName" placeholder="Last Name">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label class="form-label" for="firstName">Gender</label>
                <select asp-for="Gender" class="form-control form-control-sm" data-style="btn-default">
                    <option>Male</option>
                    <option>Female</option>
                    <option>Transgender</option>
                </select>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="DateOfBirth" class="form-label"></label> <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                <input asp-for="DateOfBirth" type="text" class="form-control form-control-sm flatpickr-date">
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Mobile" class="form-label"></label> <span asp-validation-for="Mobile" class="text-danger"></span>
                <input asp-for="Mobile" type="number" autocomplete="off" class="form-control form-control-sm">
            </div>
        </div>

        <div class="form-row d-none">
            <div class="form-group col-md-4">
                <label asp-for="MarginType" class="form-label"></label>
                <select asp-for="MarginType" class="form-control form-control-sm" data-style="btn-default">
                    <option value="1">Fixed</option>
                    <option value="0" selected="selected">Variable</option>
                </select>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Commission" class="form-label"></label> <span asp-validation-for="Commission" class="text-danger"></span>
                <input asp-for="Commission" value="0" type="number" autocomplete="off" class="form-control form-control-sm">
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Active" class="form-label"></label>
                <select asp-for="Active" class="form-control form-control-sm" data-style="btn-default">
                    <option value="1">Active</option>
                    <option value="0">InActive</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="StateName" class="form-label"></label>  <span asp-validation-for="StateName" class="text-danger"></span>
                <select asp-for="StateName" class="form-control form-control-sm" onblur="javascript: LoadCityDdl();"></select>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="City" class="form-label"></label> <span asp-validation-for="City" class="text-danger"></span>
                <select asp-for="City" class="form-control form-control-sm"></select>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="PinCode" class="form-label"></label> <span asp-validation-for="PinCode" class="text-danger"></span>
                <input asp-for="PinCode" type="number" autocomplete="off" class="form-control form-control-sm">
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="form-label"></label> <span asp-validation-for="Address" class="text-danger"></span>
            <textarea asp-for="Address" rows="2" autocomplete="off" class="form-control form-control-sm"></textarea>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="form-label" asp-for="AadharFront"></label> <span asp-validation-for="AadharFront" class="text-danger"></span>
                    <input type="file" asp-for="AadharFront" id="aadharfront" class="form-control" accept="image/*" required />
                </div>
            </div>
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="form-label" asp-for="AadharBack"></label> <span asp-validation-for="AadharBack" class="text-danger"></span>
                    <input type="file" id="aadharback" asp-for="AadharBack" class="form-control" accept="image/*" required />
                </div>
            </div>
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="form-label" asp-for="PanCard"></label> <span asp-validation-for="PanCard" class="text-danger"></span>
                    <input type="file" id="pancard" class="form-control" asp-for="PanCard" accept="image/*" required />
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="form-label" asp-for="Photo"></label> <span asp-validation-for="Photo" class="text-danger"></span>
                    <input type="file" id="photo" class="form-control" asp-for="Photo" accept="image/*" required />
                </div>
            </div>
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="form-label" asp-for="Agreement"></label> <span asp-validation-for="Agreement" class="text-danger"></span>
                    <input type="file" id="agreement" class="form-control" asp-for="Agreement" accept="application/pdf" required  />
                </div>
            </div>
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="form-label" asp-for="Affidavit"></label> <span asp-validation-for="Affidavit" class="text-danger"></span>
                    <input type="file" id="affidavit" class="form-control" asp-for="Affidavit" accept="application/pdf" required />
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <div class="form-group">
                    <label class="form-label" asp-for="Other"></label>
                    <input type="file" id="other" class="form-control" asp-for="Other" accept="application/pdf,image/*" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2">
                <button type="button" class="btn btn-primary hide" onclick="Create();">Save Details</button>
                <button type="submit" class="btn btn-primary">Save Details</button>
                <span id="loaderInfo" name="loaderInfo"></span>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">

    function Create() {
        $.ajax({
            type: "POST",
            url: "@Url.Action("SaveRetailer", "Distributor")",
            data: $("form").serialize(),
            contentType: 'application/json; charset=utf-8',
            dataType: "json",
            cache: false,
            success: function (data) {
                if (data.indexOf('Error:') > -1) {
                    //Error
                }
                else {
                    //success
                    $('#modals-info-message').html(data);
                    $('#modals-info').modal('show');
                }
                //$('#submitCreateUser').prop('disabled', false);
            },
            error: function () {
                $('#modals-info-message').html('Error in creating Master Distributor.');
                $('#modals-info').modal('show');
            }
        });
    }

    function LoadStateDdl() {
        $.getJSON("@Url.Action("StateList", "Home", new { id = 96 })", function (data) {
            //$("#ddlState").find("option:gt(0)").remove();
            $("#StateName").empty();
            $('#StateName').append('<option value="">Select State</option>');
            $.each(data, function (index, value) {
                $('#StateName').append('<option value="' + value.Id + '">' + value.RegionName + '</option>');
            });
            LoadCityDdl();
        });
    }

    function LoadCityDdl() {
        var sid = $('#StateName option:selected').val();
        $("#loaderInfo").html("LOADING");
        $.getJSON("@Url.Action("CityList", "Home")" + "?id=" + sid, function (data) {
            $("#City").empty();
            $('#City').append('<option value="">Select City</option>');
            $.each(data, function (index, value) {
                $('#City').append('<option value="' + value.CityName + '">' + value.CityName + '</option>');
            });
        });
        $("#loaderInfo").html('');
    }



    $(function () {
        LoadStateDdl();
    });

</script>

