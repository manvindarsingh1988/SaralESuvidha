@{
    Layout = "_LayoutSysAdmin";
    ViewData["title"] = "Admin Dashboard - Daily Sales Report";
}

<form id="frmReport" method="post" action="#">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-2 form-group">
                    <label class="form-label">From Date<span class="text-danger">*</span></label>
                    <input name="txtReportFromDate" id="txtReportFromDate" type="text" class="form-control flatpickr-date required">
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">To Date<span class="text-danger">*</span></label>
                    <input name="txtReportToDate" id="txtReportToDate" type="text" class="form-control flatpickr-date required">
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" class="form-control btn btn-primary" onclick="LoadReport();">Load Report</button>
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" class="form-control btn btn-primary" onclick="Export();">Export</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <h6 class="card-header alert-primary" id="lblReport">
            Report
        </h6>
        <div class="card-datatable table-responsive">
            <table class="table table-striped table-bordered" id="datatable-adminreport" data-url="">
                <thead>
                <tr>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</form>

<script type="text/javascript">

    function LoadReport() {
        if ($.fn.DataTable.isDataTable('#datatable-adminreport')) {
            $('#datatable-adminreport').DataTable().destroy();
        }
        $('#datatable-adminreport tbody').empty();
        $('#datatable-adminreport thead').empty();

        var $table = $('#datatable-adminreport');
        $table.dataTable({
            iDisplayLength: 100,
            bAutoWidth: true,
            sAjaxSource: '@Url.Action("SalesReportResult", "SysAdmin")?dateFrom=' + a2hex($('#txtReportFromDate').val()) + '&dateTo=' + a2hex($('#txtReportToDate').val()) + '&x=0',
            cache: false,
            order: [[2, "asc"]],
            columns: [
                { data: "RetailUserId", title: "Id", visible: false }, { data: "RetailerName", title: "RetailerName" },
                { data: "Debit", title: "Amount" }, { data: "CreateDate", title: "Date", render: function (data) { return moment(data).format('DD-MMM-YYYY'); } }
            ]
        });

        $('#lblReport').html('Downline sales summary report between ' + $('#txtReportFromDate').val() + ' and ' + $('#txtReportToDate').val());
    }


    function Export() {
        $.get("@Url.Action("SalesReportResult", "SysAdmin")?dateFrom=" + a2hex($('#txtReportFromDate').val()) + '&dateTo=' + a2hex($('#txtReportToDate').val()) + '&x=1', function (data) {
            $("#lblReport").html('Downline sales summary report between ' + $('#txtReportFromDate').val() + ' and ' + $('#txtReportToDate').val() + ' <span class="text-facebook">' + data + '</span>');
        });
    }

</script>