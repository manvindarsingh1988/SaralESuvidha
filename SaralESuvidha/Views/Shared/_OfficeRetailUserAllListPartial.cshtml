<div class="card">
    <h6 class="card-header">
        Retail User List
    </h6>
    <div class="card-datatable table-responsive">
        <table class="table table-striped table-bordered" id="datatable-grid-allretail">
            <thead>
            <tr>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        LoadRetailUser();
    });

    function LoadRetailUser() {
        $('#datatable-grid-allretail tbody').empty();
        $('#datatable-grid-allretail thead').empty();

        var $table = $('#datatable-grid-allretail');
        $table.dataTable({
            destroy: true,
            iDisplayLength: 10,
            bProcessing: true,
            bAutoWidth: true,
            sAjaxSource: '@Url.Action("GetAllMasterDistributor","CommonAuthAction")',
            rowId: 'Id',
            cache: false,
            order: [[2, "asc"]],
            columns: [
                { data: "Id", title: "id" }, { data: "USL", title: "USL", visible: false }, { data: "RetailerName", title: "Retailer Name" }, { data: "CscId", title: "Csc Id" },
                { data: "MobileNumber", title: "Mobile Number", visible: false }, { data: "City", title: "City" },
                { data: "EMail", title: "E-Mail" }, { data: "Address", title: "Address" },
                {
                    data: null, visible: false,
                    title: "Action",
                    defaultContent: '<button type="button" class="btn btn-default btn-sm btn-primary btnSendWelcome">SmsDetail</button> <button type="button" class="btn btn-default btn-sm btn-primary edit">EDIT</button>'
                }
            ]
        });
    }
</script>