@{
    Layout = "_LayoutSysAdmin";
    ViewData["title"] = "SysAdmin - Client Statement - S-WALLET";
}

<form id="frmReport" method="post" action="">
    <div class="card">
        <h6 class="card-header">Daily Statement of S-WALLET Between Period<span id="InfoDetail" name="InfoDetail" class=""></span></h6>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-2 form-group">
                    <label class="form-label">User USL</label>
                    <input id="OrderNo" name="OrderNo" class="form-control" onblur="javascript: LoadDetail();" data-style="btn-default" required>
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">From Date<span class="text-danger">*</span></label>
                    <input name="txtReportDate" id="txtReportDate" type="text" class="form-control flatpickr-date required">
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">To Date<span class="text-danger">*</span></label>
                    <input name="txtReportDateTo" id="txtReportDateTo" type="text" class="form-control flatpickr-date required">
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" class="form-control btn btn-primary" onclick="ExportExcel();">Export Excel</button> 
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" class="form-control btn btn-primary" onclick="LoadReport();">Load Report</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <h6 class="card-header alert-primary" id="lblReport">
            Report
        </h6>
        <div class="card-datatable table-responsive">
            <table class="table table-striped table-bordered" id="datatable-adminreport" data-url="#">
                <thead>
                    <tr>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</form>

<script type="text/javascript">
        $(document).ready(function () {

        });
        
        function LoadReport() {
            if ($.fn.DataTable.isDataTable('#datatable-adminreport')) {
                $('#datatable-adminreport').DataTable().destroy();
            }
            $('#datatable-adminreport tbody').empty();
            $('#datatable-adminreport thead').empty();
    
            var $table = $('#datatable-adminreport');
            $table.dataTable({
                iDisplayLength: 50,
                bAutoWidth: true,
                sAjaxSource: '@Url.Action("DailyAllClientStatementResult", "CommonAuthAction")?dateFrom=' +a2hex($('#txtReportDate').val()) + '&dateTo=' + a2hex($('#txtReportDateTo').val()) + '&x=0&orderNo=' + $('#OrderNo').val(),
                cache: false,
                order: [[11, "asc"], [12, "asc"]],
                columns: [
                    { data: "Rid", title: "Id", visible: "false" }, { data: "RetailerDetail", title: "RetailerDetail" }, { data: "ParentName", title: "Parent Name" },
                    { data: "TransactionType", title: "TType" }, { data: "Amount", title: "Amount" },
                    { data: "OB", title: "OB" },  { data: "Debit", title: "Debit" }, { data: "Credit", title: "Credit" }, { data: "Margin", title: "Margin" }, { data: "CB", title: "CB" },
                    { data: "LiveId", title: "LiveId", visible: false },{ data: "Remarks", title: "Remarks" },
                    { data: "CreateDate", title: "Date", type: 'datetime', render: function(data) { return moment(data).format('MM-DD-YYYY'); } },
                    { data: "CreateDate", title: "Time", type: 'time', render: function(data) { return moment(data).format('HH:mm:ss'); } },
                    { data: "UPPCL_AgentVAN", title: "UPPCL_AgentVAN" },{ data: "UPPCL_TransactionId", title: "UPPCL_TransactionId" }
                ]
            });
    
            $('#lblReport').html('Daily statement of S-WALLET of period ' + $('#txtReportDate').val() + ' to ' + $('#txtReportDateTo').val() + '.');
        }
        
        
        function ExportExcel() {
            $('#lblReport').html('Loading report...');
            $.get('@Url.Action("DailyAllClientStatementResult", "CommonAuthAction")?dateFrom=' + a2hex($('#txtReportDate').val()) + '&dateTo=' + a2hex($('#txtReportDateTo').val()) + '&x=1&orderNo=' + $('#OrderNo').val(),
            function(data) {
                if (data.indexOf('Errors:') > -1) {
                    $('#lblReport').html(data).removeClass('text-success').addClass('text-danger');
                } else {
                $('#lblReport').html('Account report of S-WALLET between date ' + $('#txtReportDate').val() + ' and ' + $('#txtReportDateTo').val() + '.' + data);
                }
            });
        }
        
    function LoadDetail() {
            if ($('#OrderNo').val().length > 0) {
                $.get("@Url.Action("RetailUserDetail", "CommonAuthAction")?usd=" + a2hex($('#OrderNo').val()), function (data) {
                    if (data.indexOf('Errors:') > -1) {
                        $('#InfoDetail').html(data).removeClass('text-success').addClass('text-danger');
                        HideAction();
                    } else {
                        $('#InfoDetail').html(data).removeClass('text-danger').addClass('text-success');
                        ShowAction();
                    }
                });
            }
            else {
                $('#InfoDetail').html('');
            }

        }
        

</script>
