@{
    Layout = "_LayoutBillPay";
}

<section class="container">
    <div class="bg-white shadow-md rounded p-4">
        <div class="row g-4">

            <!-- CableTv Recharge
            ============================================= -->
            <div class="col-lg-4 col-xxl-5">
                <h2 class="text-4 mb-3">CableTv Recharge or Bill Payment</h2>
                <form id="cableTvRechargeBill" method="post">
                    <div class="mb-3">
                        <select class="form-select" id="operator" required="">
                            <option value="">Select Your Operator</option>
                            <option>Tata Sky</option>
                            <option>Videocon D2H</option>
                            <option>DEN Networks Ltd</option>
                            <option>DishTV India Ltd</option>
                            <option>GTPL Hathway Ltd</option>
                            <option>Sun Direct TV Pvt Ltd.</option>
                            <option>Asianet Satellite Communications Ltd</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" data-bv-field="number" id="accountNumber" required placeholder="Enter Account Number">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">&#8377;</span>
                        <input class="form-control" id="amount" placeholder="Enter Amount" required type="text">
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary" type="submit">Continue</button>
                    </div>
                </form>
            </div>
            <!-- CableTv Recharge end -->
            <!-- Slideshow
            ============================================= -->
            <div class="col-lg-8 col-xxl-7">
                <div class="owl-carousel owl-theme single-slider" data-animateout="fadeOut" data-animatein="fadeIn" data-autoplay="true" data-loop="true" data-autoheight="true" data-nav="true" data-items="1">
                    <div class="item"><a href="#"><img class="img-fluid" src="~/images/slider/banner-5.jpg" alt="banner 5" /></a></div>
                    <div class="item"><a href="#"><img class="img-fluid" src="~/images/slider/banner-9.jpg" alt="banner 8" /></a></div>
                    <div class="item"><a href="#"><img class="img-fluid" src="~/images/slider/banner-7.jpg" alt="banner 3" /></a></div>
                </div>
            </div>
            <!-- Slideshow end -->

        </div>
    </div>
</section>

<script type="text/javascript">
$('#cabletv').addClass('active');
</script>