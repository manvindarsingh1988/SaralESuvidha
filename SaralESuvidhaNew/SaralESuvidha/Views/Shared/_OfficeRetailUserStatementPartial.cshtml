
<form id="frmReport" method="post" action="">
    <div class="card">
        <h6 class="card-header">Account Statement of U-Wallet Between Period<span id="InfoDetail" name="InfoDetail" class=""></span></h6>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-2 form-group">
                    <label class="form-label">User USL</label>
                    <input id="OrderNo" name="OrderNo" class="form-control" onblur="javascript: LoadDetail();" data-style="btn-default" required>
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">From Date<span class="text-danger">*</span></label>
                    <input name="txtReportDate" id="txtReportDate" type="text" class="form-control flatpickr-date required">
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">To Date<span class="text-danger">*</span></label>
                    <input name="txtReportDateTo" id="txtReportDateTo" type="text" class="form-control flatpickr-date required">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 form-group">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" class="form-control btn btn-primary" onclick="LoadRechargeReport();">Load Report</button>
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" class="form-control btn btn-primary" onclick="ExportReportExcel();">Export Report Excel</button>
                </div>
                
                <div class="col-lg-2 form-group">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" class="form-control btn btn-primary d-none" onclick="LoadRechargeSummaryReport();">Load Summary</button>
                </div>
                <div class="col-lg-2 form-group">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" class="form-control btn btn-primary d-none" onclick="ExportSummaryExcel();">Export Summary Excel</button>
                </div>
            </div>            
        </div>
    </div>
    <div class="card">
        <h6 class="card-header alert-primary" id="lblReport">
            Report
        </h6>
        <div class="card-datatable table-responsive">
            <table class="table table-striped table-bordered" id="datatable-adminreport" data-url="#">
                <thead>
                    <tr>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</form>

<script type="text/javascript">
        $(document).ready(function () {

        });

        function LoadRechargeReport() {
            if ($.fn.DataTable.isDataTable('#datatable-adminreport')) {
                $('#datatable-adminreport').DataTable().destroy();
            }
            $('#datatable-adminreport tbody').empty();
            $('#datatable-adminreport thead').empty();

            var $table = $('#datatable-adminreport');
            $table.dataTable({
                iDisplayLength: 15,
                bAutoWidth: false,
                sAjaxSource: '@Url.Action("DailyClientStatementResult","CommonAuthAction")?dateFrom=' + a2hex($('#txtReportDate').val()) + '&dateTo=' + a2hex($('#txtReportDateTo').val()) + '&x=0&orderNo=' + $('#OrderNo').val(),
                cache: false,
                order: [[12, "asc"], [13, "asc"]],
                columns: [
                    { data: "Rid", title: "Rid", visible: false },{ data: "RetailUserId", title: "RetailUserId" }, { data: "USL", title: "USL" },{ data: "RetailerDetail", title: "RetailerDetail" },
                    { data: "RechargeNumber", title: "Number" }, { data: "RechargeStatus", title: "RStatus" },{ data: "UPPCL_Status", title: "UPPCL_Status" },
                    { data: "Amount", title: "Amount" }, { data: "UPPCL_Amount", title: "UPPCL_Amount" }, { data: "OB", title: "OB" },{ data: "Debit", title: "Debit" }, { data: "Credit", title: "Credit" }, { data: "Margin", title: "Margin" }, { data: "CB", title: "CB" },
                    { data: "CreateDate", title: "Date", render: function (data) { return moment(data).format('MM-DD-YYYY'); } },
                    { data: "CreateDate", title: "Time", render: function (data) { return moment(data).format('HH:mm:ss'); } },
                    { data: "TransactionType", title: "TType" }, { data: "UPPCL_AgentVAN", title: "UPPCL_AgentVAN" },{ data: "UPPCL_TransactionId", title: "UPPCL_TransactionId" },
                    { data: "UPPCL_BillId", title: "UPPCL_BillId" }, { data: "UPPCL_PaymentType", title: "PType" },{ data: "UPPCL_ConnectionType", title: "CType" },{ data: "UPPCL_TransactionDate", title: "UPPCL_TransactionDate" },
                    { data: "Remarks", title: "Remarks" }, { data: "RefundId", title: "RefundId" }
                    
                ]
            });
            $('#lblReport').html('Account report of U-Wallet between date ' + $('#txtReportDate').val() + ' and ' + $('#txtReportDateTo').val() + '.');

        }
        
        function LoadRechargeSummaryReport() {
            if ($.fn.DataTable.isDataTable('#datatable-adminreport')) {
                $('#datatable-adminreport').DataTable().destroy();
            }
            $('#datatable-adminreport tbody').empty();
            $('#datatable-adminreport thead').empty();
    
            var $table = $('#datatable-adminreport');
            $table.dataTable({
                iDisplayLength: 15,
                bAutoWidth: false,
                sAjaxSource: '@Url.Action("DailyClientStatementSummaryResult","CommonAuthAction")?dateFrom=' + a2hex($('#txtReportDate').val()) + '&dateTo=' + a2hex($('#txtReportDateTo').val()) + '&x=0&orderNo=' + $('#OrderNo').val(),
                cache: false,
                order: [[1, "asc"]],
                columns: [
                    { data: "TransactionType", title: "TransactionType" },{ data: "Amount", title: "Amount" }, { data: "Debit", title: "Debit" },
                    { data: "Credit", title: "Credit" }, { data: "Margin", title: "Margin" }
                ]
            });
            $('#lblReport').html('Recharge summary report of U-Wallet between date ' + $('#txtReportDate').val() + ' and ' + $('#txtReportDateTo').val() + '.');
    
        }
        
        function LoadDetail() {
                if ($('#OrderNo').val().length > 0) {
                    $.get("@Url.Action("RetailUserDetail", "CommonAuthAction")?usd=" + a2hex($('#OrderNo').val()), function (data) {
                        if (data.indexOf('Errors:') > -1) {
                            $('#InfoDetail').html(data).removeClass('text-success').addClass('text-danger');
                            HideAction();
                        } else {
                            $('#InfoDetail').html(data).removeClass('text-danger').addClass('text-success');
                            ShowAction();
                        }
                    });
                }
                else {
                    $('#InfoDetail').html('');
                }
        
            }

    function ExportSummaryExcel() {
        $('#lblReport').html('Loading report...');
        $.get('@Url.Action("DailyClientStatementSummaryResult", "CommonAuthAction")?dateFrom=' + a2hex($('#txtReportDate').val()) + '&dateTo=' + a2hex($('#txtReportDateTo').val()) + '&x=1&orderNo=' + $('#OrderNo').val(),
            function (data) {
                if (data.indexOf('Errors:') > -1) {
                    $('#lblReport').html(data).removeClass('text-success').addClass('text-danger');
                } else {
                    $('#lblReport').html('Recharge summary report of U-Wallet between date ' + $('#txtReportDate').val() + ' and ' + $('#txtReportDateTo').val() + '.' + data);
                }
            });
    }

    function ExportReportExcel() {
        $('#lblReport').html('Loading report...');
        $.get('@Url.Action("DailyClientStatementResult", "CommonAuthAction")?dateFrom=' + a2hex($('#txtReportDate').val()) + '&dateTo=' + a2hex($('#txtReportDateTo').val()) + '&x=1&orderNo=' + $('#OrderNo').val(),
            function (data) {
                if (data.indexOf('Errors:') > -1) {
                    $('#lblReport').html(data).removeClass('text-success').addClass('text-danger');
                } else {
                    $('#lblReport').html('Account report of U-Wallet between date ' + $('#txtReportDate').val() + ' and ' + $('#txtReportDateTo').val() + '.' + data);
                }
            });
    }


</script>
